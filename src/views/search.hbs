<main id="search">
  <section class="game-search">
    <h1>Search</h1>

    <form class="search-form" >
      <input type="text" class="search-game" name="search" value="{{search}}" placeholder="Search here..." />
      <select id="platform" name="platform">
        {{{options}}}
      </select>
      <button type="submit" class="btn-search">Search</button>
    </form>
    {{#if hasGames}}
    <div class="search-result">
      <div class="search-list">
        {{#each games}}
            <div class="game">
                <div class="game-img">
                    <img src="{{imageUrl}}">
                </div>
                <div class="game-info">
                    <h1>{{name}}</h1>
                    <p><span>Platform: </span>{{platform}}</p>
                    <p><span>Genre: </span>{{genre}}</p>
                    <p><span>Price: </span>${{price}}</p>
                </div>

                <a href="{{_id}}/details" class="btn-details">Details</a>
            </div>
            {{/each}}
      </div>
    </div>
    {{else}}
    <div class="no-match">
      <p>No match was found!</p>
    </div>
    {{/if}}
  </section>
</main>